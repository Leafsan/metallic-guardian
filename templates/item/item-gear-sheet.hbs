<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Name" /></h1>
    </div>
  </header>

    <section class="sheet-stats grid grid-4col">
    <!-- 타이밍 -->
    <div class="stat-label">타이밍</div>
    <div class="stat-value">
        <input
        type="text"
        name="system.timing"
        value="{{system.timing}}"
        data-dtype="String"
        />
    </div>

    <!-- 종류 -->
    <div class="stat-label">종류</div>
    <div class="stat-value">
        <input
        type="text"
        name="system.type"
        value="{{system.type}}"
        data-dtype="String"
        />
    </div>

    <!-- 구입난이도 -->
    <div class="stat-label">구입난이도</div>
    <div class="stat-value">
        <input
        type="text"
        name="system.buy-difficulty"
        value="{{system.buy-difficulty}}"
        data-dtype="String"
        />
    </div>

    <!-- 상비포인트 -->
    <div class="stat-label">상비포인트</div>
    <div class="stat-value">
        <input
        type="text"
        name="system.price"
        value="{{system.price}}"
        data-dtype="String"
        />
    </div>
    </section>


  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="description">효과</a>
    <a class="item" data-tab="effects">이펙트</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Description Tab --}}
    <div class="tab" data-group="primary" data-tab="description">
    {{!-- TinyMCE를 통한 텍스트 입력 부분 --}}
    {{editor enrichments.description target="system.description" rollData=rollData button=true owner=owner editable=editable}}
    </div>

    {{!-- Attributes Tab --}}
    <div class="tab effects" data-group="primary" data-tab="effects">
      {{!-- As you add new fields, add them in here! --}}
      {{> "systems/metallic-guardian/templates/item/parts/item-effects.hbs"}}
    </div>
  </section>
</form>