<div class="flexrow grid-2col">
  {{!-- 모델 표시 또는 드래그 앤 드롭을 통한 추가 --}}
  <div class="align-center">
    {{#if items.model}}
      <div class="flexrow">
        <div class="item-name">
          <h4>{{items.model.name}}</h4>
        </div>
        <button class="item-control remove-model" title="Remove Model">
          <i class="fas fa-trash"></i>
        </button>
      </div>
    {{else}}
      <div class="model-drop-area" data-item-type="item-guardian-model">
        <p>{{localize "Drop Guardian Model Here"}}</p>
      </div>
    {{/if}}
  </div>

  {{!-- 브레이크 여부 확인 및 상태 표시 --}}
  <div class="align-center">
    <label>{{localize "Break Status"}}</label>
    <div>
      {{#if system.break}}
        <span>{{localize "ON"}}</span>
      {{else}}
        <span>{{localize "OFF"}}</span>
      {{/if}}
    </div>
    <input
      type="checkbox"
      name="system.break"
      {{#if system.break}}checked{{/if}}
      class="toggle-break"
    />
  </div>
</div>

<!-- 무기 리스트 -->
<ol class="items-list">
  <li class="item flexrow items-header">
    <div class="item-name">{{localize "Weapon"}}</div>
    <div class="item-damage">{{localize "Damage"}}</div> <!-- 대미지 열 추가 -->
    <div class="item-equipped">{{localize "Equipped"}}</div>
    <div class="item-controls">
      <a
        class="item-control item-create"
        title="{{localize 'DOCUMENT.Create' type="Item"}}"
        data-type="guardian-weapon"
      >
        <i class="fas fa-plus"></i>
        {{localize "DOCUMENT.New" type="weapon"}}
      </a>
    </div>
  </li>
  {{#each items.weapons as |item id|}}
    <li class="item flexrow" data-item-id="{{item._id}}">
      <div class="item-name">
        <div class="item-image">
          <a class="view-item" data-item-id="{{item._id}}">
            <img
              src="{{item.img}}"
              title="{{item.name}}"
              width="24"
              height="24"
            />
          </a>
        </div>
        <h4>{{item.name}}</h4>
      </div>
      <div class="item-damage align-center">
        <a class="roll-damage" data-item-id="{{item._id}}" title="Roll Damage">
          <i class="fas fa-dice-d20"></i>
        </a>
      </div>
      <div class="item-equipped align-center">
        <input
          type="checkbox"
          name="system.equipped"
          {{#if item.system.equipped}}checked{{/if}}
          data-item-id="{{item._id}}"
          class="toggle-equipped"
        />
      </div>
      <div class="item-controls">
        <a
          class="item-control item-edit"
          title="{{localize 'DOCUMENT.Update' type="Item"}}"
        >
          <i class="fas fa-edit"></i>
        </a>
        <a
          class="item-control item-delete"
          title="{{localize 'DOCUMENT.Delete' type="Item"}}"
        >
          <i class="fas fa-trash"></i>
        </a>
      </div>
    </li>
  {{/each}}
</ol>

