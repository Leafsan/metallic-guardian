<section class="classes-section flexcol">

  <!-- 전투치 표 -->
  <div class="combat-stats flexcol">
    <div class="section-header">전투치 표</div>

    <!-- 전투치 베이스 -->
    <div class="combat-base grid grid-12col">
      <div class="combat-stat grid-span-3"></div>
      <div class="combat-stat">명중치 (B + C) / 2</div>
      <div class="combat-stat">회피치 (B + F) / 2</div>
      <div class="combat-stat">포격치 (D + C) / 2</div>
      <div class="combat-stat">방벽치 (D + F) / 2</div>
      <div class="combat-stat">행동치 (B + D)</div>
      <div class="combat-stat">역장치</div>
      <div class="combat-stat">내구력</div>
      <div class="combat-stat">감응력</div>
      <div class="combat-stat">공격력</div>

      <div class="combat-stat grid-span-3">전투치 베이스</div>
      <input
        type="number"
        name="system.combat.base.hit"
        value="{{system.combat.base.hit}}"
      />
      <input
        type="number"
        name="system.combat.base.evasion"
        value="{{system.combat.base.evasion}}"
      />
      <input
        type="number"
        name="system.combat.base.artillery"
        value="{{system.combat.base.artillery}}"
      />
      <input
        type="number"
        name="system.combat.base.defense"
        value="{{system.combat.base.defense}}"
      />
      <input
        type="number"
        name="system.combat.base.initiative"
        value="{{system.combat.base.initiative}}"
      />
      <input
        type="number"
        name="system.combat.base.forceField"
        value="{{system.combat.base.forceField}}"
      />
      <input
        type="number"
        name="system.combat.base.stamina"
        value="{{system.combat.base.stamina}}"
      />
      <input
        type="number"
        name="system.combat.base.willpower"
        value="{{system.combat.base.willpower}}"
      />
      <input
        type="number"
        name="system.combat.base.attack"
        value="{{system.combat.base.attack}}"
      />
    </div>

    <!-- 클래스 / 레벨 -->
    <div class="class-levels-section grid grid-12col">
      <div class="combat-stat">클래스 / 레벨</div>

      <!-- 클래스 1 -->
      <input
        type="text"
        class="grid-start-2"
        name="system.class.first.name"
        placeholder="클래스 1"
        value="{{system.class.first.name}}"
      />
      <input
        type="number"
        name="system.class.first.level"
        placeholder="레벨"
        value="{{system.class.first.level}}"
      />
      <input type="number" name="system.class.first.hit" />
      <input type="number" name="system.class.first.evasion" />
      <input type="number" name="system.class.first.artillery" />
      <input type="number" name="system.class.first.defense" />
      <input type="number" name="system.class.first.initiative" />
      <input type="number" name="system.class.first.forceField" />
      <input type="number" name="system.class.first.stamina" />
      <input type="number" name="system.class.first.willpower" />
      <input type="number" name="system.class.first.attack" />

      <!-- 클래스 2 -->
      <input
        type="text"
        class="grid-start-2"
        name="system.class.second.name"
        placeholder="클래스 2"
        value="{{system.class.second.name}}"
      />
      <input
        type="number"
        name="system.class.second.level"
        placeholder="레벨"
        value="{{system.class.second.level}}"
      />
      <input type="number" name="system.class.second.hit" />
      <input type="number" name="system.class.second.evasion" />
      <input type="number" name="system.class.second.artillery" />
      <input type="number" name="system.class.second.defense" />
      <input type="number" name="system.class.second.initiative" />
      <input type="number" name="system.class.second.forceField" />
      <input type="number" name="system.class.second.stamina" />
      <input type="number" name="system.class.second.willpower" />
      <input type="number" name="system.class.second.attack" />

      <!-- 클래스 3 -->
      <input
        type="text"
        class="grid-start-2"
        name="system.class.third.name"
        placeholder="클래스 3"
        value="{{system.class.third.name}}"
      />
      <input
        type="number"
        name="system.class.third.level"
        placeholder="레벨"
        value="{{system.class.third.level}}"
      />
      <input type="number" name="system.class.third.hit" />
      <input type="number" name="system.class.third.evasion" />
      <input type="number" name="system.class.third.artillery" />
      <input type="number" name="system.class.third.defense" />
      <input type="number" name="system.class.third.initiative" />
      <input type="number" name="system.class.third.forceField" />
      <input type="number" name="system.class.third.stamina" />
      <input type="number" name="system.class.third.willpower" />
      <input type="number" name="system.class.third.attack" />
    </div>

    <!-- 미장비 (소계) -->
    <div class="equipment-section grid grid-12col">
      <div class="combat-stat grid-span-3">미장비 (소계)</div>
      <input type="number" name="system.equipment.sk.hit" />
      <input type="number" name="system.equipment.sk.evasion" />
      <input type="number" name="system.equipment.sk.artillery" />
      <input type="number" name="system.equipment.sk.defense" />
      <input type="number" name="system.equipment.sk.initiative" />
      <input type="number" name="system.equipment.sk.forceField" />
      <input type="number" name="system.equipment.sk.stamina" />
      <input type="number" name="system.equipment.sk.willpower" />
      <input type="number" name="system.equipment.sk.attack" />
    </div>

    <!-- 장비 상태 (소계) -->
    <div class="equipment-status-section grid grid-12col">
      <div class="combat-stat grid-span-3">장비 상태 (소계)</div>
      <input type="number" name="system.equipment.status.hit" />
      <input type="number" name="system.equipment.status.evasion" />
      <input type="number" name="system.equipment.status.artillery" />
      <input type="number" name="system.equipment.status.defense" />
      <input type="number" name="system.equipment.status.initiative" />
      <input type="number" name="system.equipment.status.forceField" />
      <input type="number" name="system.equipment.status.stamina" />
      <input type="number" name="system.equipment.status.willpower" />
      <input type="number" name="system.equipment.status.attack" />
    </div>
  </div>
</section>